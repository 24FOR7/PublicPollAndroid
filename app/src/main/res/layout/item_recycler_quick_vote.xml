<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.junjange.myapplication.data.QuickPolls" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="21dp"
                android:layout_marginStart="36dp"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/dDayBg"
                        android:layout_width="wrap_content"
                        android:minWidth="48dp"
                        android:layout_height="20dp"
                        app:strokeColor="#9bc7f6"
                        app:cardCornerRadius="9dp"
                        android:backgroundTint="#9bc7f6"
                        app:strokeWidth="2dp"
                        android:layout_margin="5dp"
                        >
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/dDay"
                            android:text="D-day"
                            android:textSize="10sp"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </androidx.cardview.widget.CardView>

                </FrameLayout>

                <!-- 티어 이미지 -->
                <ImageView
                    android:id="@+id/tier"
                    android:text="티어"
                    android:src="@drawable/layout_tier1"
                    android:layout_gravity="center"
                    android:layout_width="12sp"
                    android:layout_height="12sp"

                    />

                <TextView
                    android:id="@+id/nick"
                    android:text="Jeniffer"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:textColor="#9f9f9f"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    />


            </LinearLayout>


            <TextView
                android:id="@+id/title"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="41dp"
                android:layout_marginTop="30dp"
                android:textSize="24sp"
                android:text="How do you like\ntang shooook?"
                android:textColor="?android:attr/textColorPrimary"/>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/quick_question1_bg"
                    android:layout_width="230dp"
                    android:layout_height="42dp"
                    android:background="@drawable/layout_select_normal_poll_background"
                    app:cardCornerRadius="10sp"
                    app:strokeColor="#b3b6e8"
                    app:strokeWidth="2dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/quick_question1_txt"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:textColor="#989898"
                            android:text="Dip un Sauce"
                            />

                        <TextView
                            android:id="@+id/quick_question1_turnout"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:fontFamily="sans-serif"
                            android:textColor="#989898"
                            android:text="0.1%"
                            android:visibility="gone"
                            />


                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/quick_question2_bg"
                    android:layout_width="230dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="10sp"
                    app:strokeColor="#b3b6e8"
                    app:strokeWidth="2dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        >
                        <TextView
                            android:id="@+id/quick_question2_txt"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:textColor="#989898"
                            android:text="Pour Sauce"
                            />

                        <TextView
                            android:id="@+id/quick_question2_turnout"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:fontFamily="sans-serif"
                            android:textColor="#989898"
                            android:text="99.9%"
                            android:visibility="gone"
                            />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>



