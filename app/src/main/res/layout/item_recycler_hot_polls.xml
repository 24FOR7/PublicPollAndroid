<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="com.junjange.myapplication.data.ModelBoardComponent" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >


    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hot_poll_card_view"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeColor="#dcdcdc"
            app:cardElevation ="8dp"
            app:strokeWidth="1dp"
            app:cardCornerRadius="15sp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <!-- 투표 이미지 -->

                <ImageView
                    android:layout_marginStart="21dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/image_default"
                    android:visibility="visible"/>

                <LinearLayout
                    android:layout_margin="21dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        >

                        <!-- 해시태그 text -->
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:textColor="#989898"
                            android:text="Dip un Sauce"
                            />


                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/icon_people"
                            android:layout_marginEnd="8dp"
                            />



                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:gravity="right"
                            android:fontFamily="sans-serif"
                            android:textColor="#989898"
                            android:text="75"
                            />
                    </LinearLayout>

                    <TextView
                        android:fontFamily="sans-serif"
                        android:layout_width="150dp"
                        android:layout_height="52dp"
                        android:textSize="16sp"
                        android:maxLines = "2"
                        android:ellipsize="end"
                        android:text="How do to thiknk avkut sdth?"
                        android:textColor="#6d6d6d"/>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/rank"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="4dp"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:elevation="8dp"
            android:text=""
            android:textColor="@android:color/white"
            android:background="@drawable/layout_rank1"

            />
    </FrameLayout>
    </LinearLayout>

</layout>





