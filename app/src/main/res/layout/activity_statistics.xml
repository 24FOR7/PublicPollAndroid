<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="viewModel"
            type="com.junjange.myapplication.ui.viewmodel.StatisticsViewModel" />
    </data>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="926dp"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="292dp"
            android:layout_marginTop="93dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/login_pbp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Jeniffer"
                android:textColor="#9f9f9f"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:text="How do you\nthink about this?"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:text="Statistics of  20s Man ..."
            android:textColor="#8f8f8f"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="213dp"
            android:layout_height="213dp"
            android:layout_gravity="center"
            android:layout_marginTop="48dp" />

        <LinearLayout
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="58dp"
            android:background="@drawable/round_corner"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="Age"
                android:textColor="#bbb1e5"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/age_firstLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/ageAll"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="All"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/age10s"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="~10s"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/age20s"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="20s"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/age_secondLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/age30s"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="30s"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/age40s"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="40s"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/age50s"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="50s~"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="Gender"
                android:textColor="#bbb1e5"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/genderAll"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:buttonTint="#bbb1e5"
                    android:fontFamily="sans-serif"
                    android:text="Man"
                    android:textColor="#a1a1a1"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/genderMan"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:buttonTint="#bbb1e5"
                    android:fontFamily="sans-serif"
                    android:text="Man"
                    android:textColor="#a1a1a1"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <RadioButton
                    android:id="@+id/genderWoman"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:buttonTint="#bbb1e5"
                    android:fontFamily="sans-serif"
                    android:text="Man"
                    android:textColor="#a1a1a1"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:text="Tier"
                android:textColor="#bbb1e5"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/tier1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/tierAll"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="All"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/tierBronze"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="Bronze"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/tierSilver"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="Silver"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/tier2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/tierGold"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="Gold"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/tierPlatinum"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="Platinum"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <RadioButton
                        android:id="@+id/tierDiamond"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:buttonTint="#bbb1e5"
                        android:fontFamily="sans-serif"
                        android:text="Diamond"
                        android:textColor="#a1a1a1"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                </RadioGroup>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>


</layout>
