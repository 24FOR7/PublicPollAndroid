<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="item"
            type="com.junjange.myapplication.data.ModelBoardComponent" />
    </data>

<androidx.cardview.widget.CardView
    android:id="@+id/normal_question_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_unselect_normal_poll_background"
    app:cardCornerRadius="10sp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:strokeColor="#dcdcdc"
    app:cardElevation ="8dp"
    app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_margin="15dp"
            >
            <TextView
                android:id="@+id/normal_question_txt"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="#989898"
                android:text="Dip un Sauce"
                />

            <TextView
                android:id="@+id/normal_question_turnout"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:fontFamily="sans-serif"
                android:textColor="#989898"
                android:text="0.1%"
                android:visibility="gone"
                />

        </LinearLayout>

</androidx.cardview.widget.CardView>

</layout>
